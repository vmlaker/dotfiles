# tcsh resource file.

# Listing related stuff.
unalias ls
alias ll 'ls -l'
alias lt 'ls -lt'
alias lsd 'ls -la'
alias lst 'ls -lat'

# Shallow disk usage.
alias duh 'du --max-depth=1'

# Customize the prompt.
# (Nice examples at http://www.tcsh.org/PromptExamples)
if ($USER == 'root') then
    set prompt = '%U%n@%m%u:%B%~%b # '
else
    set prompt = '%U%n@%m%u:%B%~%b> '
endif

set history = 1000

setenv LD_LIBRARY_PATH
setenv PYTHONPATH

set path =(\
\
    /usr/local/bin \
\
\   # MPICH.\
    /usr/lib64/mpich/bin \
\
    $HOME/.local/bin \
    $HOME/.dotfiles/bin \
    $path \
)

switch ($OSTYPE)
case "darwin":
    set path =(\
        $HOME/Library/Python/2.7/bin \
\
)
    breaksw
endsw

setenv EDITOR emacs
