# tcsh resource file.

# Listing related stuff.
unalias ls
alias ll 'ls -l'
alias lt 'ls -lt'
alias lsd 'ls -la'
alias lst 'ls -lat'
alias lth 'ls -lt | head'

# Shallow disk usage.
alias duh 'du --max-depth=1'

# Customize the prompt.
# (Nice examples at http://www.tcsh.org/PromptExamples)
if ($USER == 'root') then
    set prompt = '%U%n@%m%u:%B%~%b # '
else
    set prompt = '%U%n@%m%u:%B%~%b> '
endif

set history = 1000

setenv LD_LIBRARY_PATH
setenv PYTHONPATH

set path =( $HOME/bin \
            $HOME/.local/bin \
            $path )

setenv EDITOR emacs
